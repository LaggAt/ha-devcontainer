#!/bin/bash

# Import
for f in /usr/share/hadev/*
  do
    source $f
done

function Help {
  echo "
  dev
    Run devcontainer commands

  usage:
    dev [command]

  where [command] is one of:
    help             Shows this help
    help             Shows this help
  "
}

if [[ "$2" == "--help" ]]; then
  Help
  exit 0
fi

case $1 in
    help | --help)
        Help
        ;;
    preview | start)
        StartHomeAssistant
        ;;
    check | check-config | config)
        HomeAssistantConfigCheck
        ;;
    set-version | version | set)
        SetHomeAssistantVersion
        ;;
    upgrade | update | install | reinstall)
        UpdgradeHomeAssistantDev
        ;;
    init)
        InitDevEnv
        ;;
    run)
        RunDevelopentInstance
        ;;
    *)
        Help
        ;;
esac